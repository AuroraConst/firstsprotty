{
    
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "node",//I needed node resolution instead of NodeNext to deal with tsc compile errors where it was expecting explicit .js in exports
      "esModuleInterop": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "outDir": "./lib",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "reflect-metadata"
      ],
      "lib": ["ES2022", "DOM"],
      "baseUrl": "./"
    },
    "include": [
      "src/**/*"
    ]
  }